{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"module": "esnext",
		"moduleResolution": "bundler"
	},
	"include": ["src/**/*", "types/**/*"],
	"exclude": ["node_modules", "dist"]
}
